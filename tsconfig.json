{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "DOM",
      "ES2015"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": [
    "src"
  ]
}
